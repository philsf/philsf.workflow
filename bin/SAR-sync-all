#!/bin/bash

# SAR_GC=""
# OPTIND=1

while getopts "hgr:" opt; do
    case $opt in
	h) #display help syntax
	    echo "help syntax"
	    exit 0
	    ;;
	g) GC_flag="-g"
	   ;;
	r) # replace REMOTES array
	    REMOTE_flag="-r ${OPTARG}"
	   ;;
	\?) # Invalid option
            echo "Error: Invalid option"
            exit 0
	    ;;
    esac
done

shift "$((OPTIND-1))"

DIRECTORIES=("$@")

for REPO in "${DIRECTORIES[@]}";
do echo -n "Entering $REPO ";
   # enter directory
   cd "$REPO";
   # SAR-sync ${GC_flag} ${REMOTE_flag}
   echo "";
   cd - >/dev/null;
done
